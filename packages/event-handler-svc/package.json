{
  "name": "@mojaloop/transfers-bc-event-handler-svc",
  "version": "0.2.1",
  "description": "Mojaloop vNext Transfers BC - Event Handler Service",
  "license": "Apache-2.0",
  "homepage": "https://github.com/mojaloop/transfers-bc/event-handler-svc",
  "private": true,
  "mojaloop": {
    "publish_to_dockerhub": true
  },
  "bugs": {
    "url": "https://github.com/mojaloop/transfers-bc/issues#readme"
  },
  "contributors": [
    "Pedro Sousa Barreto <pedrosousabarreto@gmail.com>"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "start": "npm run service",
    "start:dev": "npm run build && AUDIT_KEY_FILE_PATH=./dist/tmp_audit_key_file npm run service",
    "service": "node dist/index.js",
    "build": "tsc",
    "watch": "tsc -w",
    "clean": "npm run clean:npm; npm run clean:dist",
    "clean:dist": "rm -rf dist",
    "clean:npm": "rm -rf node_modules",
    "pretest": "npm run build",
    "standard": "npm run lint",
    "lint": "npm run build && npx eslint ./src",
    "lint:fix": "npm run build && npx eslint ./src --fix",
    "test:unit": "jest --passWithNoTests --testMatch **/test/unit/**/*.test.ts",
    "dep:check": "ncu -e 2",
    "dep:update": "ncu -u"
  },
  "dependencies": {
    "@mojaloop/transfers-bc-domain-lib": "*",
    "@mojaloop/auditing-bc-client-lib": "~0.0.14",
    "@mojaloop/auditing-bc-public-types-lib": "~0.0.15",
    "@mojaloop/logging-bc-client-lib": "~0.1.24",
    "@mojaloop/logging-bc-public-types-lib": "~0.1.19",
    "@mojaloop/platform-configuration-bc-public-types-lib": "~0.3.3",
    "@mojaloop/platform-configuration-bc-client-lib": "~0.3.4",
    "@mojaloop/platform-shared-lib-nodejs-kafka-client-lib": "~0.3.65",
    "@mojaloop/platform-shared-lib-public-messages-lib": "~0.1.132",
    "@mojaloop/security-bc-public-types-lib": "~0.2.1",
    "@mojaloop/platform-shared-lib-observability-client-lib": "~0.1.9",
    "@mojaloop/platform-shared-lib-observability-types-lib": "~0.1.8",
    "@mojaloop/transfers-bc-config-lib": "~0.1.0",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@typescript-eslint/eslint-plugin": "^5.60.0",
    "@typescript-eslint/parser": "^5.60.0",
    "eslint": "^8.43.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "npm-check-updates": "^16.10.13",
    "ts-jest": "^29.1.0",
    "typescript": "^5.1.3"
  }
}
